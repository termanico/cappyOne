{
  "name": "cappyOne",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^5",
    "@sap/xssec": "^3.2.11",
    "express": "^4",
    "sqlite3": "^5.0.2"
  },
  "devDependencies": {
    "@sap/ux-specification": "^1.96.0",
    "passport": "^0.5.2"
  },
  "engines": {
    "node": "^14"
  },
  "scripts": {
    "start": "cds run",
    "undeploy": "cf undeploy cappyOne --delete-services --delete-service-keys"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "database": ":memory:"
        }
      },
      "uaa": {
        "kind": "xsuaa",
        "credentials": {}
      }
    },
    "features": {
      "in_memory_db": true,
      "fiori_preview": true
    }
  },
  "sapux": [
    "app/cappyoneui"
  ]
}
